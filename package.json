{
  "name": "htmlnano",
  "version": "2.1.5",
  "description": "Modular HTML minifier, built on top of the PostHTML",
  "author": "Kirill Maltsev <maltsevkirill@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && bunchee",
    "compile": "npm run build",
    "lint": "eslint --fix .",
    "pretest": "npm run lint && npm run compile",
    "test": ":",
    "posttest": "mocha --timeout 5000 --require @swc-node/register --recursive --check-leaks --globals addresses 'test/**/*.ts'",
    "prepare": "npm run compile"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.mjs",
      "require": "./dist/helpers.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./presets/ampSafe": {
      "types": "./dist/presets/ampSafe.d.ts",
      "import": "./dist/presets/ampSafe.mjs",
      "require": "./dist/presets/ampSafe.js"
    },
    "./presets/max": {
      "types": "./dist/presets/max.d.ts",
      "import": "./dist/presets/max.mjs",
      "require": "./dist/presets/max.js"
    },
    "./presets/safe": {
      "types": "./dist/presets/safe.d.ts",
      "import": "./dist/presets/safe.mjs",
      "require": "./dist/presets/safe.js"
    }
  },
  "keywords": [
    "posthtml",
    "posthtml-plugin",
    "html",
    "postproccessor",
    "minifier"
  ],
  "dependencies": {
    "@types/relateurl": "^0.2.33",
    "cosmiconfig": "^9.0.0",
    "posthtml": "^0.16.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@swc-node/register": "^1.10.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.0",
    "bunchee": "^6.5.1",
    "cssnano": "^7.0.0",
    "eslint": "^9.25.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "expect": "^30.1.1",
    "globals": "^16.0.0",
    "mocha": "^11.0.1",
    "postcss": "^8.3.11",
    "purgecss": "^7.0.2",
    "relateurl": "^0.2.7",
    "rimraf": "^6.0.0",
    "srcset": "5.0.1",
    "svgo": "^3.0.2",
    "terser": "^5.21.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.0",
    "uncss": "^0.17.3"
  },
  "peerDependencies": {
    "cssnano": "^7.0.0",
    "postcss": "^8.3.11",
    "purgecss": "^7.0.2",
    "relateurl": "^0.2.7",
    "srcset": "5.0.1",
    "svgo": "^3.0.2",
    "terser": "^5.10.0",
    "uncss": "^0.17.3"
  },
  "peerDependenciesMeta": {
    "cssnano": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "purgecss": {
      "optional": true
    },
    "relateurl": {
      "optional": true
    },
    "srcset": {
      "optional": true
    },
    "svgo": {
      "optional": true
    },
    "terser": {
      "optional": true
    },
    "uncss": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/posthtml/htmlnano.git"
  },
  "bugs": {
    "url": "https://github.com/posthtml/htmlnano/issues"
  },
  "homepage": "https://github.com/posthtml/htmlnano"
}
